<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemContainer"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/comicThumb"
            android:src="@drawable/load_image_placeholder"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

    <TextView
            android:id="@+id/title"
            android:text="Some very long title"
            android:layout_toEndOf="@id/comicThumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/comicThumb"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
    />

    <TextView
            android:id="@+id/subtitle"
            android:text="Clear hierarchy is created by aligning the most distinguishing content on the left, with the least distinguishing on the right."
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/comicThumb"
            android:layout_below="@id/title"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    />
</RelativeLayout>